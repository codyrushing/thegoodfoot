---

import { Markup } from 'astro-remote';
import { storyblokEditable, renderRichText, type SbBlokData, type ISbRichtext } from '@storyblok/astro';

interface RichTextBlok extends SbBlokData {
    content: ISbRichtext;
    extra_classes?: string;    
}

interface Props {
    blok: RichTextBlok
}

const { blok } = Astro.props;
const content = renderRichText(blok.content);
---
<div class={`richtext-content ${blok.extra_classes ?? ''}`} {...storyblokEditable(blok)}>
    <Markup content={content} />
</div>